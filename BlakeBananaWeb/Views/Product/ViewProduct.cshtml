@model BlakeBananaWeb.Models.Products
@{
    
}
    <div class="individal-product">
        <h1>@Html.DisplayFor(model => model.Name)</h1>
        <img src="/images/@Html.DisplayFor(model => model.ImagePath)"/>
        <div class="side-details">
        <h2>Price $@Html.DisplayFor(model => model.Price)</h2>
        <div class="line"></div>
        <h2>Size @Html.DisplayFor(model => model.Size)</h2>
        <div class="line"></div>
        <button>Add to Cart</button>
        </div>
        <div class="product-description">
        <h2>@Html.DisplayFor(model => model.Description)</h2>
        </div>
    </div>
