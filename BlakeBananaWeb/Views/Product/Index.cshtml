@model IEnumerable<Products>
@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<table class="table table-bordered table-striped style="width:1000%"">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Discription
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                    <td width="30%">
                    @obj.Description
                    </td>
            </tr>
        }
    </tbody>

</table>

