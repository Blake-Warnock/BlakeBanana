@model IEnumerable<Products>
@{
    ViewData["Title"] = "Index";
}

<h1>All Products</h1>

<div class="product-container">
    <h1>Blake's Classic Bananas</h1>
    @foreach (var obj in Model) if (obj.Category == "Bananas")
    {
        <a asp-action="ViewProduct" asp-route-id="@obj.Id" class="products">
            @if(@obj.Name.Length <= 30){
                <h1 class="smallerTitle">@obj.Name</h1>
            }else{
                <h1>@obj.Name</h1>
            }
                <img src="@obj.ImagePath" />
                <h2>$@obj.Price</h2>
            <p>@obj.Description</p>
        </a>


    }
    <h1>Blake's Bananas Merch</h1>
    @foreach (var obj in Model) if (obj.Category == "Merch")
        {

            <a asp-action="ViewProduct" asp-route-id="@obj.Id" class="products">
            <h1>@obj.Name</h1>
                <img src="@obj.ImagePath" />
                <h2>$@obj.Price</h2>
            <p>@obj.Description</p>
        </a>
        }
    <h1>Blake's Bananas Other Food Products</h1>
    @foreach (var obj in Model) if (obj.Category == "OtherFood")
        {
            <a asp-action="ViewProduct" asp-route-id="@obj.Id" class="products">
                <h1>@obj.Name</h1>
                <img src="@obj.ImagePath" />
                <h2>$@obj.Price</h2>
                <p>@obj.Description</p>
            </a>
        }
    <h1>Blake's Bananas Gift Cards and Tour Pricing</h1>
    @foreach (var obj in Model) if (obj.Category == "Gift/Tour")
        {
            <a asp-action="ViewProduct" asp-route-id="@obj.Id" class="products">
                <h1>@obj.Name</h1>
                <img src="@obj.ImagePath" />
                <h2>$@obj.Price</h2>
                <p>@obj.Description</p>
            </a>
        }
</div>
       
 
